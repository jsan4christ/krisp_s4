{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        {# <h1>{{ 'title.homepage'|trans|raw }}</h1>#}
        <h1>Welcome to the KRISP Website Admin Section</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {#{{ 'help.browse_app'|trans|raw }}#}
                    If you are not an <strong>administrator</strong>, please click on the link below to browse the website!
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="http://krisp.org.za/">
                        <i class="fa fa-users" aria-hidden="true"></i> {#{{ 'action.browse_app'|trans }}#}Browse website
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {#{{ 'help.browse_admin'|trans|raw }}#}
                    If you are an <strong>administrator</strong>, please follow the link below to manage website!
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('admin_index') }}">
                        <i class="fa fa-lock" aria-hidden="true"></i> {#{{ 'action.browse_admin'|trans }}#}Manage Website
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
