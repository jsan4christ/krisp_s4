{% extends 'base.html.twig' %}

{% block body_id 'view_cats' %}

{% block main %}
    <h1>List of Categories</h1>
    <table class="table table-responsive table-center table-striped">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Name</th>
            </tr>
        </thead>
    {% for cat in cats %}
        <tr>
            <td>
               {{ cat.catId }}
            </td>
            <td>
                {{ cat.catName }}
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('add_cat') }}">Add New Category</a>
    </div>
{% endblock %}