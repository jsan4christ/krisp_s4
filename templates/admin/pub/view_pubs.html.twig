{% extends 'admin/layout.html.twig' %}

{% block body_id 'view_pubs' %}

{% block main %}
    <h1>View Publications</h1>

    <table class="table">
        <thead>
            <th>Title</th>
            <th>Date</th>
            <th>Journal</th>
        </thead>
        {% for pub in pubs %}
            <tr>
                <td><a href="{{ path('update_pub', {id : pub.id}) }}" class="">{{ pub.title }}</a></td>
                <td>{{ pub.date }}</td>
                <td>{{ pub.journal }}</td>
            </tr>
        {% endfor %}
    </table>

    {% if pubs.haveToPaginate %}
        <div class="navigation text-center">
            {{ pagerfanta(pubs, 'twitter_bootstrap3_translated', {routeName : 'view_pubs_paginated'}) }}
        </div>
    {% endif %}
{% endblock %}